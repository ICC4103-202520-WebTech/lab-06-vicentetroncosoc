<%= form_with(model: recipe, local: true) do |f| %>
  <% if recipe.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(recipe.errors.count, "error") %> prevented saving:</h5>
      <ul class="mb-0">
        <% recipe.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :cook_time, "Cook time (min)", class: "form-label" %>
    <%= f.number_field :cook_time, class: "form-control", min: 0 %>
  </div>

  <div class="mb-3">
    <%= f.label :difficulty, class: "form-label" %>
    <%= f.select :difficulty, %w[Easy Medium Hard], {}, class: "form-select" %>
  </div>

  <div class="mb-3">
  <%= f.label :instructions, class: "form-label" %>
  <div class="trix-wrapper">
    <%= f.rich_text_area :instructions %>
  </div>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", recipes_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
