<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 mb-0">Recipes</h1>
  <%= link_to "New Recipe", new_recipe_path, class: "btn btn-primary" %>
</div>

<table class="table table-hover align-middle">
  <thead>
    <tr>
      <th>Title</th>
      <th>Cook time (min)</th>
      <th>Difficulty</th>
      <th class="text-end text-nowrap">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= link_to recipe.title, recipe %></td>
        <td><%= recipe.cook_time %></td>
        <td><%= difficulty_badge(recipe.difficulty) %></td>
        <td class="text-end text-nowrap">
          <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
            <%= link_to edit_recipe_path(recipe), class: "btn btn-outline-secondary" do %>
              <i class="bi bi-pencil"></i>
              <span class="d-none d-md-inline ms-1">Edit</span>
            <% end %>

            <%= link_to recipe_path(recipe),
                        data: { turbo_method: :delete, turbo_confirm: "Â¿Eliminar esta receta?" },
                        class: "btn btn-outline-danger" do %>
              <i class="bi bi-trash"></i>
              <span class="d-none d-md-inline ms-1">Delete</span>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

